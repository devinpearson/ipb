{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If transpiling with TypeScript: */
    "module": "NodeNext",
    "outDir": "bin",
    "rootDir": ".",
    "sourceMap": true,

    /* AND if you're building for a library: */
    "declaration": true,

    /* AND if you're building for a library in a monorepo: */
    "declarationMap": true,
    "lib": ["es2022"],

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@cmds/*": ["src/cmds/*"],
      "@utils": ["src/utils.ts"],
      "@types": ["src/cmds/types.ts"]
    }
  },
  "include": ["src", "test"],
  "exclude": [
    "./bin/**/*" // This is what fixed it!
  ]
}
